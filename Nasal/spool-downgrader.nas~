
var spoolDowngrade = func {

    varthrottle_fwd0 = getprop("/controls/engines/engine[0]/throttle-fwd");
    varthrottle_fwd1 = getprop("/controls/engines/engine[1]/throttle-fwd");
    interpolate("/controls/engines/engine[0]/internal-throttle-fwd",throttle_fwd0,0.6);
    interpolate("/controls/engines/engine[1]/internal-throttle-fwd",throttle_fwd1,0.6);

    settimer(spoolDowngrade,0);
}
setlistener("/sim/signals/fdm-initialized", spoolDowngrade);